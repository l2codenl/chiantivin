%h1=t(:edit, :scope => [:wine,:winery,:title], :title => @winery.title)

= form_for [:admin,@winery], :html => { :multipart => true } do |f|
  %p
    =f.label :title
    =f.text_field :title
  %p
    =f.label :winery_banner
    =f.file_field :winery_banner
  - unless @winery.winery_banner_file_name.nil?
    %p
      =link_to t(:current, :scope => :banner), @winery.winery_banner.url(:banner) 
      =link_to t(:deletebanner, :scope => :banner), remove_banner_admin_winery_path(@winery)
  %p
    =f.label :body
    =f.cktext_area :body, :toolbar=>'Full', :width=>'100%', :heigth=>'200px'
  =f.submit t(:save)
