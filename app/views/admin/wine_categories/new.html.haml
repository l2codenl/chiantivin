%h1=t(:new, :scope => [:wine,:category,:title])

= form_for [:admin,@category], :html => { :multipart => true } do |f|
  %p
    =f.label :title
    =f.text_field :title
  %p
    =f.label :banner
    =f.file_field :banner
  %p
    =f.label :portrait
    =f.file_field :portrait
  %p
    =f.label :body
    =ckeditor_textarea("wine_category", "body", :width => '100%', :height => '200px')
  =f.submit t(:save)
