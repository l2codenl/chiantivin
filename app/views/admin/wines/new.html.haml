%h1=t(:new,:scope => [:wine,:title])

= form_for [:admin,@wine], :html => { :multipart => true } do |f|
  %p
    =f.label t(:category, :scope => [:wine,:form])
    =collection_select(:wine_category, :id, WineCategory.all, :id, :title)
    =link_to t(:new, :scope => [:wine, :category, :title]), new_admin_wine_category_path
  %p
    =f.label :title
    =f.text_field :title
  %p
    =f.label :sell
    =f.check_box :sell
  %p
    =f.label "#{:price} â‚¬"
    =f.text_field :price
  %p
    =f.label :image
    =f.file_field :image
  %p
    =f.label :body
    =f.ckeditor_textarea("body", :width => '100%', :height => '200px')
  =f.submit t(:save)
